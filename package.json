{
  "name": "git-panda",
  "version": "0.1.0",
  "description": "AI-powered git commit message generator using Claude",
  "author": "William Smith willsmith.devops@gmail.com",
  "keywords": [
    "git",
    "commit",
    "ai",
    "claude",
    "cli",
    "conventional-commits"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheWilliamSmith/git-panda.git"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "build": "tsup src/main.ts --format esm --clean --shims",
    "start": "npx tsx src/main.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "bin": {
    "git-panda": "./dist/main.js"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/TheWilliamSmith/git-panda/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "homepage": "https://github.com/TheWilliamSmith/git-panda#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "inquirer": "^13.2.2",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "snyk": "^1.1302.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "type-check": "^0.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
